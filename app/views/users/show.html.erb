<div class="my-account">
	<section class="open-houses group">
		<h2>Open Houses</h2>
		<%= render "hosting_open_houses", open_houses: @user.hosted_open_houses.active.order(event_datetime: :asc) %>

		<%= render "attending_open_houses", open_houses: @user.open_houses.active.order(event_datetime: :asc) %>
	</section>
	
	<section class="rentals">
		<h2>Rentals</h2>
		
		<a class="new-rental group" href="<%= new_rental_url %>">Post a new rental</a>
		
		<div class="owned-rentals group">
		  <h4>Owned</h4>
			<ul class="rentals-list">
				<% if @user.owned_rentals.empty? %>
					<li class="no-rentals">
						No Rentals Listed
					</li>
				<% end %>
				<% @user.owned_rentals.active.each do |owned_rental| %>
			  	<%= render "rental", rental: owned_rental %>
			  <% end %>
			</ul>
		</div>

		<div class="saved-rentals group">
		  <h4>Saved</h4>
			<ul class="rentals-list">
				<% if @user.saved_rentals.empty? %>
					<li class="no-rentals">
						No Saved Rentals
					</li>
				<% end %>
			  <% @user.saved_rentals.active.each do |saved_rental| %>
					<%= render "rental", rental: saved_rental %>
				<% end %>
			</ul>
		</div>
	</section>
</div>