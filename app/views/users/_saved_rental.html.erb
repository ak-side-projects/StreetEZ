<ul class="saved-rentals-list">  
  <li class="saved-rental">
    <div class="rental-thumbnail-header">
      <a href="<%= rental_url(saved_rental.id) %>">
				<% if saved_rental.photos.first %>
					<img class="rental-photo" src="<%= saved_rental.photos.first.file.url(:thumb) %>" alt="apartment_rental_photo">
				<% end %>
      </a>
      <p class="rental-address">
        <%= saved_rental.address.street + ' #' + saved_rental.address.unit %>
      </p>
      <p class="rental-price"><%= saved_rental.monthly_rent %> per month</p>
      <p class="rental-bedrooms"><%= saved_rental.num_bedrooms %> bed</p>
      <p class="rental-bathrooms"><%= saved_rental.num_bathrooms %> bath</p>
      <p class="rental-sq-footage"><%= saved_rental.sq_footage %> ft2</p>
    </div>
    <form action="<%= saved_rental_url(saved_rental.id) %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <%= auth_token %>
      <input type="submit" value="Remove">
    </form>
  </li>
</ul>