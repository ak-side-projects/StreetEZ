<form action="<%= provided_url %>" method="post">
  <%= auth_token %>

  <label for="user_email">Email</label>
  <input
    id="user_email"
    type="email"
    name="user[email]"
    value="<%= user.email %>">

  <label for="user_password">Password</label>
  <input
    id="user_password"
    type="password"
    name="user[password]">

  <input type="submit" value="Submit">
</form>