<h1>Sign In</h1>

<form action="<%= session_url %>" method="post">
  <%= auth_token %>

  <label for="user_email">Email</label>
  <input
    type="email"
    name="user[email]"
    value="<%= @user.email %>"
    id="user_email">

  <label for="user_password">Password</label>
  <input
    type="password"
    name="user[password]"
    id="user_password">

  <input type="submit" value="Submit">
</form>