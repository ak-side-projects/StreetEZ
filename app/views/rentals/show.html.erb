<% if @rental.owner == current_user %>
	<a class="edit" href="<%= edit_rental_url(@rental.id) %>">Edit</a>

  <form class="delete" action="<%= rental_url(@rental.id) %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <%= auth_token %>
    <input class="delete" type="submit" value="Delete">
  </form>
<% end %>

<div class="rental-show">
	
	<%= render "rental_show_photos", rental: @rental, featured_photo: @featured_photo %>
	
	<% if signed_in? %>
		<%= render "saved_rental", rental: @rental %>
	<% end %>
	
  <div class="rental-thumbnail-header">
    <p class="address">
      <%= @rental.address.street + ' #' + @rental.address.unit %>
    </p>
  </div>

  <p class="price"><%= number_to_currency(@rental.monthly_rent, precision: 0) %> per month</p>

  <p class="bed"><%= @rental.num_bedrooms %> bed</p>
  <p class="bath"><%= @rental.num_bathrooms %> bath</p>
  <p class="sq-ft"><%= number_with_delimiter(@rental.sq_footage) %> ft<sup>2</sup></p>
	
	<%= render "open_house", rental: @rental %>
	
	<% if signed_in? %>
		<%= render "message_owner", rental: @rental %>
	<% else %>
		<a href="<%= new_session_url %>">Sign in to send a message to the owner!</a>
	<% end %>
</div>