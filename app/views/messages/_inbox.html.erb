<h4>Inbox</h4>

<ul class="received-message-list">
  <% received_messages.each do |message| %>
    <a class="received-message-link" href="<%= message_url(message.id) %>">
      <li class="received-message">
        <h4>From: <%= message.sender.name %></h4>
        <p><%= message.body %></p>
      </li>
    </a>
  <% end %>
</ul>