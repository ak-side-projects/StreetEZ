<div class="messages-index">
<h2>Messages</h2>

<section class="inbox">
	<h2>Inbox</h4>

	<ul>
	    <li class="messages-header group">
	      <p class="user">From</p>
	      <p class="body">Message</p>
				<p class="datetime">Date & Time</p>
	    </li>
			<% if (receivedMessages.length === 0) { %>
				<li>No Messages</li>
			<% } %>
			<% receivedMessages.forEach(function(message) { %>
				<li class="message">
					<a class="message-link group" href="#/<%= message.get('id') %>">
			      <p class="user"><%= message.sender.get('name') %></p>
			      <p class="body"><%= message.get('body') %></p>
						<p class="datetime">
							<%= moment(message.get("created_at")).fromNow() %>
						</p>
			    </a>
			  </li>
			<% }); %>
	</ul>
</section>

<section class="sentbox">
	<h2>Sentbox</h3>
		
	<ul>
	    <li class="messages-header group">
	      <p class="user">To</p>
	      <p class="body">Message</p>
				<p class="datetime">Date & Time</p>
	    </li>
			<% if (sentMessages.length === 0) { %>
				<li>No Messages</li>
			<% } %>
			<% sentMessages.forEach(function(message) { %>
				<li class="message">
					<a class="message-link group" href="#/<%= message.get('id') %>">
			      <p class="user"><%= message.recipient.get('name') %></p>
			      <p class="body"><%= message.get('body') %></p>
						<p class="datetime">
							<%= moment(message.get("created_at")).fromNow() %>
						</p>
			    </a>
			  </li>
			<% }); %>
	</ul>
</section>

</div>