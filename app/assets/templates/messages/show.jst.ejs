<h2 class="messages">Message Conversation</h2>

<main class="message-conversation">
	<h4><strong>Your conversation with INSERT OTHER USER'S NAME</strong></h4>
	<form class="create-message group" action="<%=  %>" method="post">
	  <%= auth_token %>
	  <input type="hidden" name="message[recipient_id]" value="<%= other_user.id %>">

	  <textarea class="create-message group" name="message[body]" placeholder="Send another message to INSERT OTHER USER'S NAME."></textarea>
	
	  <input type="submit" value="Send Message">
	</form>

	<ul>
	  <% messages.each(function(message) { %>
		    <li>
					<header class="message-header group">
		      <% if StreetEZ.currentUser === message.get('sender') %>
		        <p class="user"><%= "You:" %></p>
		      <% else %>
		        <p class="user"><%= message.sender.get(name) + ":" %></p>
		      <% end %>
		      <p class="datetime"><%= moment(message.get("created_at")).fromNow() %></p>
					</header>
	      
		      <p class="message-body"><%= message.get('body') %></p>
			</li>
		<% }) %>
	</ul>
</main>